    <TextView
        android:id="@+id/title"
        android:layout_width="269dp"
        android:layout_height="30dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Create a new account"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="309dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="Please fill in the form to continue"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.045" />

    <EditText
        android:id="@+id/fullName_signup_edittxt"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="58dp"
        android:layout_marginBottom="564dp"
        android:background="@drawable/edittext_bg"
        android:hint="Full Name"
        android:paddingStart="16dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"
        app:layout_constraintVertical_bias="0.381"
        app:layout_constraintWidth_percent="0.85" />

    <EditText
        android:id="@+id/email_signup_edit_txt"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_bg"
        android:hint="Email"
        android:paddingStart="16dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fullName_signup_edittxt"
        app:layout_constraintVertical_bias="0.036"
        app:layout_constraintWidth_percent="0.85" />

    <EditText
        android:id="@+id/phone_signup_edittxt"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_bg"
        android:hint="Ph number"
        android:paddingStart="16dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_signup_edit_txt"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintWidth_percent="0.85" />

    <EditText
        android:id="@+id/password_signup_edit_txt"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_bg"
        android:hint="Password"
        android:paddingStart="16dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_signup_edittxt"
        app:layout_constraintVertical_bias="0.066"
        app:layout_constraintWidth_percent="0.85" />

    <Button
        android:id="@+id/signInBtn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="104dp"
        android:text="SIGN IN"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_signup_edit_txt"
        app:layout_constraintWidth_percent="0.6" />

    <TextView
        android:id="@+id/loginText"
        android:layout_width="221dp"
        android:layout_height="34dp"
        android:gravity="center"
        android:text="Have an account? "
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signInBtn"
        app:layout_constraintVertical_bias="0.351" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="119dp"
        android:layout_height="43dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:gravity="center"
        android:text="Login"
        android:textColor="#FF0000"
        android:textSize="17sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/loginText"
        app:layout_constraintTop_toTopOf="@id/loginText"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
