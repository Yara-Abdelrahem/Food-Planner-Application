<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Meal Image -->
        <ImageView
            android:id="@+id/image_meal"
            android:layout_width="373dp"
            android:layout_height="273dp"
            android:scaleType="centerCrop" />

        <!-- Meal Name -->
        <TextView
            android:id="@+id/text_meal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="8dp" />

        <!-- Origin Country -->
        <TextView
            android:id="@+id/text_meal_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:layout_marginTop="4dp" />

        <!-- Ingredients and Measurements -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_ingredients"
            android:layout_width="376dp"
            android:layout_height="105dp"
            android:orientation="horizontal" />

        <!-- Preparation Steps -->
        <TextView
            android:id="@+id/text_meal_instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- YouTube Video -->

        <WebView
            android:id="@+id/webview_meal_video"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp" />

        <Space
            android:layout_width="373dp"
            android:layout_height="47dp" />

        <LinearLayout
            android:layout_width="335dp"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/addtocalender"
                android:layout_width="59dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_gravity="top|left"
                android:layout_marginStart="12dp"
                android:clickable="true"
                android:src="@drawable/calender2" />

            <Space
                android:layout_width="173dp"
                android:layout_height="38dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/addmealfavorite"
                android:layout_width="59dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:clickable="true"
                android:foregroundGravity="top|left"
                android:src="@drawable/heart21" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>


